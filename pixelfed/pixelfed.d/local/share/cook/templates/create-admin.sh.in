#!/bin/sh

set -e
# shellcheck disable=SC3040
set -o pipefail

export PATH=/usr/local/bin:$PATH

# Check for root privileges
if ! [ "$(id -u)" = 0 ]; then
   echo "This script must be run with root privileges"
   exit 1
fi

USERNAME="%%ownername%%"
EMAIL="%%owneremail%%"
CREDENTIALSFILE="/mnt/private/pixelfed.owner.credentials"
PASSWORD=$(/usr/bin/openssl rand -base64 16)

echo "Pixelfed owner | $EMAIL | $PASSWORD" > "$CREDENTIALSFILE"

# change directory to tmp for su purposes
cd /tmp || exit 1

# create user
su -m www -c "cd /usr/local/www/pixelfed; /usr/local/bin/php artisan user:create --name=$USERNAME --username=$EMAIL --email=$EMAIL --password=$PASSWORD --is_admin=1 --confirm_email=1"

# notify user where credentials are stored
echo "Pixelfed Owner credentials are stored in $CREDENTIALSFILE"
