datasources:
  - name: Prometheus
    type: prometheus
    access: proxy
    orgId: 1
    httpMethod: POST
    url: http://%%ip%%:9090
    isDefault: 1
    version: 1
    editable: true
  - name: Loki
    type: loki
    access: proxy
    orgId: 1
    httpMethod: POST
    url: http://%%ip%%:3100
    isDefault: 0
    version: 1
    editable: true

