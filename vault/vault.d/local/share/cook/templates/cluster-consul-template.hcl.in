vault {
  address      = "https://127.0.0.1:8100"
  token        = "%%token%%"
  unwrap_token = false
  renew_token  = true

  ssl {
    enabled = true
    verify = true
    ca_cert = "/mnt/certs/ca_chain.crt"
  #  cert = "/mnt/certs/agent.crt"
  #  key = "/mnt/certs/agent.key"
    server_name = "localhost"
  }
}

syslog {
  enabled  = true
  facility = "LOCAL5"
}

template {
  source      = "/mnt/templates/cluster-agent.crt.tpl"
  destination = "/mnt/certs/agent.crt"
  backup      = true
  command     = "/usr/local/share/cook/bin/cluster-reload-vault.sh"
}

template {
  source      = "/mnt/templates/cluster-agent.key.tpl"
  destination = "/mnt/certs/agent.key"
  perms       = 0640
  command     = "/usr/local/share/cook/bin/cluster-reload-vault.sh"
}

template {
  source      = "/mnt/templates/cluster-ca.crt.tpl"
  destination = "/mnt/certs/ca.crt"
  command     = "/usr/local/share/cook/bin/cluster-reload-vault.sh"
}
