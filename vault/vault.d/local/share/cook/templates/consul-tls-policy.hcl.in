# WARNING: This was created with consul connect in mind
# WE MIGHT WANT TO REDUCE ACCESS RIGHTS

path "/sys/mounts" {
  capabilities = [ "read" ]
}

path "/sys/mounts/consulpki" {
  capabilities = [ "read" ]
}

path "/sys/mounts/consulpki_int" {
  capabilities = [ "read" ]
}

path "/consulpki/" {
  capabilities = [ "read" ]
}

path "/consulpki/root/sign-intermediate" {
  capabilities = [ "update" ]
}

path "/consulpki_int/*" {
  capabilities = [ "create", "read", "update", "delete", "list" ]
}
