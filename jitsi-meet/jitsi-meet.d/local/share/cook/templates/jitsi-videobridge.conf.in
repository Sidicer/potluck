videobridge {
  http-servers {
    public {
      port = -1
      tls-port = -1
    }
    private {
      # See JettyBundleActivatorConfig in Jicoco for values
      host = 127.0.0.1
    }
  }
  websockets {
    enabled = false
  }
  sctp {
    enabled = false
  }
  stats {
    # Enable broadcasting stats/presence in a MUC
    enabled = true
    transports = [
      { type = "colibri" }
    ]
  }
  apis {
    xmpp-client {
      configs {
        xmpp-server-1 {
          hostname="localhost"
          domain = "auth.%%domain%%"
          username = "jvb"
          password = "%%keypassword%%"
          muc_jids = "JvbBrewery@internal.auth.%%domain%%"
          muc_nickname = "unique-instance-id"
          disable_certificate_verification = true
        }
      }
    }
  }
  ice {
    tcp {
      enabled = true
      port = 4443
    }
    udp {
      port = 10000
    }      
  }
}
